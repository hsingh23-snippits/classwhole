%header
  %div.center
    %h3= link_to "Classwhole", root_path, {:id => "logo"}
    %nav
      -#%li= link_to "Course List", show_semester_path(Semester.first.season, Semester.first.year)
      = link_to "Scheduler", scheduler_index_path
      = link_to "About", about_path
      - if Rails.env == "development"
        = link_to "Sandbox", sandbox_index_path
    %nav.secondary-nav
      - if current_user.is_temp?
        = render 'shared/fb_login_button'
      - else 
        = render 'shared/user_nav', :current_user => current_user
    %div.alert-box
