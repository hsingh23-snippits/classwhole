%div.topbar-wrapper
  %div.topbar{ "data-dropdown" => "dropdown" }
    %div.topbar-inner
      %div.container
        %h3= link_to "Classrroom", root_path, {:id => "logo"}
        %ul.nav
          %li= link_to "Browse", show_university_path
          %li= link_to "Schedule", scheduler_index_path
        %ul{ :class => "nav secondary-nav"}
          - if current_user
            %li.dropdown
              = link_to current_user.name, current_user.name, {:class => "dropdown-toggle"}
              %ul.dropdown-menu
                %li= link_to "Logout", logout_path
          - else 
            %li= render 'shared/fb_login_button'
    %div.alert-box
