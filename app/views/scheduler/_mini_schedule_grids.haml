%div.mini-pagination-top
  %h3 More schedules
  -#%a{:href=>"#", :class=>"mini-prev"} <
  -#%a{:href=>"#", :class=>"mini-next"} >
  %div.mini-pagination-container
    %ul.mini-pagination
      - i = 1
      - @possible_schedules.each do |sections|
        - if i == 1
          %li.current
            %a{ :href => "##{i-1}" }
            = render 'mini_schedule', :sections => sections
        -else 
          %li
            %a{ :href => "##{i-1}" }
            = render 'mini_schedule', :sections => sections
        - i += 1
