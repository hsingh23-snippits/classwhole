= javascript_include_tag "scheduler.js.erb"

%div.scheduler-content
  %div#slides
    -if @possible_schedules.size > 1
      %div.mini-pagination-top
        -#%a{:href=>"#", :class=>"mini-prev"} <
        -#%a{:href=>"#", :class=>"mini-next"} >
        %div.mini-pagination-container
          %ul.mini-pagination
            - i = 1
            - @possible_schedules.each do |sections|
              - if i == 1
                %li.current
                  %a{ :href => "##{i-1}" }
                  = render 'mini_schedule', :sections => sections
              -else 
                %li
                  %a{ :href => "##{i-1}" }
                  = render 'mini_schedule', :sections => sections
              - i += 1
    %div.slides_container
      - @possible_schedules.each do |sections|
        = render "schedule", :sections => sections
    %a{:href=>"#", :class=>"prev"}
    %a{:href=>"#", :class=>"next"}

  %div{ :id => "save-modal", :class => "modal hide" }
    %div.modal-header
      %a{ :class => "close-modal x-button"}
      %h3 Save
    %div.modal-body
      %h2 You must log in to save your schedule.
      %a= render 'shared/fb_login_button'
    %div.modal-footer
      %a{:class=>"btn primary close-modal"} Close

  %div{ :id => "register-modal", :class => "modal hide" }
    %div.modal-header
      %a{ :class => "close-modal x-button"}
      %h3 CRNs
    %div.modal-body
      %ul#crns 
      -#%iframe{ :src => "https://webprod.admin.uillinois.edu/ssa/servlet/SelfServiceLogin?appName=edu.uillinois.aits.SelfServiceLogin&dad=BANPROD1", :width => "100%" }
    %div.modal-footer
      %a{:class=>"btn primary close-modal"} Close

:javascript
  var course_ids = #{@course_ids};
