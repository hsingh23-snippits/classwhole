<!DOCTYPE html>
%html
  %head
    %title= yield(:title)
    -# stylesheet_link_tag    "bootstrap.min.css"
    = stylesheet_link_tag    "application" 
    = csrf_meta_tags
    = javascript_tag          "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? 
    = javascript_include_tag "google.analytics"
    = javascript_include_tag "mixpanel.init"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" 
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" 
    = javascript_include_tag "jquery.tipsy", "init", "bootstrap-modal.js", "bootstrap-alerts.js", "bootstrap-dropdown.js", "bootstrap-modal.js", "bootstrap-tabs.js" , "slides.min.jquery.js", "general/alert", "http://connect.facebook.net/en_US/all.js", "general/fb_button"
  %body
    %div#fb-root
    = render "shared/header"
    %div#wrapper
      = yield
    %div#footer
      = render "shared/footer"
